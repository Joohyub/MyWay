<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:elevation="4dp"
        android:paddingBottom="13dp"
        android:paddingTop="13dp" 
        android:descendantFocusability="beforeDescendants"
  android:focusableInTouchMode="true" >

        <ImageButton
            android:id="@+id/btnDrawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:paddingLeft="20dp"
            android:src="@drawable/ic_drawer_button"
            android:text="Button" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="50dp"
            android:background="@android:color/transparent"
            android:hint="Enter search key" 
            android:id="@+id/etSearchKey"
            />

        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_discover"
            android:text="Button" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="다가오는 일정"
        android:textColor="#777"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lvCommingEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp" >
    </ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:text="현재 위치"
        android:textColor="#777"
        android:textStyle="bold" />

    <!-- 구글 뷰 자리! -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:elevation="4dp" >

        <ListView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#384233" >
        </ListView>
    </RelativeLayout>

</LinearLayout>